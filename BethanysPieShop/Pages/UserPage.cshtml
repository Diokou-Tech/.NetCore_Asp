@page
@model BethanysPieShop.Pages.UserPageModel

<h1>Formulaire d'ajout d'un utilisateur'</h1>
<h3 class="my-5">
    You're just one step away from your delicious pies.
</h3>
<div asp-validation-summary="All" class="text-danger"></div>
<div class="col-6 mx-auto">
    <form method="post" asp-antiforgery="true">
        <div class="col-12">
            <label asp-for="User.Nom" class="form-label"></label>
            <input asp-for="User.Nom" class="form-control" />
           <span asp-validation-for="User.Nom" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="User.Prenom" class="form-label"></label>
            <input asp-for="User.Prenom" class="form-control" />
            <span asp-validation-for="User.Prenom" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="User.Adresse" class="form-label"></label>
            <input asp-for="User.Adresse" class="form-control" />
            <span asp-validation-for="User.Adresse" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="User.Email" class="form-label"></label>
            <input asp-for="User.Email" class="form-control" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
        <div class="mt-4 mx-auto col-12">
            <button class="btn block btn-secondary">Soumettre</button>
        </div>
    </form>
</div>